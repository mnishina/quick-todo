{
  "name": "quick-todo",
  "version": "1.0.0",
  "description": "Quick TODO",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000",
    "dev": "npx http-server . -p 3000 -c-1 --cors",
    "dev:watch": "npx live-server --port=3000 --no-browser --cors",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "todo",
    "pwa",
    "vanilla-js",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.0.0",
    "http-server": "^14.1.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "es5",
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  }
}
